            <VBox spacing="8">
                <Label text="Nombre de bons :" style="-fx-font-weight: bold; -fx-text-fill: #475569; -fx-font-size: 14px;"/>
                <TextField fx:id="txtNombreBons" promptText="Ex: 10"
