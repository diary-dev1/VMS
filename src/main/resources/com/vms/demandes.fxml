                </VBox>

                <VBox alignment="CENTER" style="-fx-background-color: #FEF3C7; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                    <Label fx:id="demandesEnAttente" text="0" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #F59E0B;"/>
                    <Label text="En Attente" style="-fx-text-fill: #92400E; -fx-font-size: 14px;"/>
                </VBox>

                <VBox alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                    <Label fx:id="montantTotal" text="0,00 Rs" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6366F1;"/>
                    <Label text="Montant Total" style="-fx-text-fill: #64748B; -fx-font-size: 14px;"/>
                </VBox>
            </HBox>

            <!-- Tableau -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20;" VBox.vgrow="ALWAYS">
                <TableView fx:id="tableDemandes" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colReference" text="RÃ©fÃ©rence" prefWidth="150"/>
