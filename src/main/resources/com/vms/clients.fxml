                    <Label text="Total Clients" styleClass="stat-label"/>
                </VBox>
                <VBox styleClass="stat-card-success" alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                    <Label fx:id="clientsActifs" text="0" styleClass="stat-number">
                        <font><Font name="Arial Bold" size="32"/></font>
                    </Label>
                    <Label text="Clients Actifs" styleClass="stat-label"/>
                </VBox>
