                    <TableColumn fx:id="colDateInscription" text="Inscription" prefWidth="100"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="180"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- FORMULAIRE -->
    <right>
        <VBox fx:id="panelFormulaire" styleClass="form-panel" spacing="15" visible="false" managed="false">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="ðŸ“ Nouveau Client" styleClass="form-title">
